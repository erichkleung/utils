[alias]
	co = checkout
	b = branch
	st = status
    l = log --graph --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
    d = diff
    c = commit
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[reviewboard]
	url = http://reviews.fivestarscard.com
[user]
	name = Eric Leung
	email = eric.leung@fivestarscard.com
[credential]
	helper = cache
